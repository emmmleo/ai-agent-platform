<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aiagent.menu.mapper.MenuMapper">

    <resultMap id="MenuResultMap" type="com.aiagent.menu.entity.Menu">
        <id column="id" property="id"/>
        <result column="parent_id" property="parentId"/>
        <result column="title" property="title"/>
        <result column="path" property="path"/>
        <result column="order_num" property="orderNum"/>
        <result column="allowed_roles" property="allowedRoles"/>
    </resultMap>

    <select id="findAll" resultMap="MenuResultMap">
        SELECT id, parent_id, title, path, order_num, allowed_roles
        FROM menus
        ORDER BY parent_id ASC, order_num ASC, id ASC
    </select>

    <insert id="insert" parameterType="com.aiagent.menu.entity.Menu" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO menus (parent_id, title, path, order_num, allowed_roles)
        VALUES (#{parentId}, #{title}, #{path}, #{orderNum}, #{allowedRoles})
    </insert>

    <select id="count" resultType="long">
        SELECT COUNT(*) FROM menus
    </select>

</mapper>

